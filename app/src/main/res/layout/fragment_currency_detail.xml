<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/currency_pic"
    android:orientation="vertical"
    tools:context=".view.fragments.CurrencyDetailFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/app_main_margin">

        <TextView
            android:id="@+id/currencyNameTV"
            style="@style/fragment_currency_detail_view_style"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:text="Доллар США" />

        <TextView
            android:id="@+id/infoTV"
            style="@style/fragment_currency_detail_view_style"
            android:text="@string/fragment_currency_detail_info_tv"
            android:textSize="20sp"
            android:textStyle="italic"
            tools:text="70 рублей это 1 доллар США" />

        <EditText
            android:id="@+id/currencyEditText"
            style="@style/fragment_currency_detail_view_style"
            android:layout_width="match_parent"
            android:hint="@string/fragment_currency_detail_currency_edit_text_hint"
            android:importantForAutofill="no"
            android:inputType="numberDecimal"
            tools:ignore="LabelFor" />


        <Button
            android:id="@+id/convertButton"
            style="@style/fragment_currency_detail_view_style"
            android:layout_marginBottom="0dp"
            android:backgroundTint="@android:color/holo_green_dark"
            android:text="@string/fragment_currency_detail_convert_button" />

    </LinearLayout>

</FrameLayout>